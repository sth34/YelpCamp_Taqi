                                <span class="glyphicon glyphicon-user"></span>
                                <strong><%= currentUser.username %></strong>
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
			 <ul style="width: 250px" role="menu" class="dropdown-menu">
                                <li>
                                    <div class="navbar-login">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <p class="text-center">
                                                    <span style="font-size: 80px" class="glyphicon glyphicon-user icon-size"></span>
                                                </p>
                                            </div>
                                            <div class="col-lg-8">
                                                <p class="text-left"><strong><%= currentUser.username %></strong></p>
                                                <p class="text-left small"><%=currentUser.email %></p>
                                                <p class="text-left">
                                                    <a href="/profile/<%=currentUser.id%>" class="btn btn-primary btn-block btn-sm">Profile</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li><a class="hov" href="/campgrounds">Account Settings <span class="glyphicon glyphicon-cog pull-right"></span></a></li>
